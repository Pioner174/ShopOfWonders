@page "/"
@using Microsoft.AspNetCore.Components.Web
@namespace SOW.ShopOfWonders.Blazor.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="~/" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.3/js/bootstrap.min.js"
    asp-fallback-href="/lib/bootstrap523/css/bootstrap.min.css"
    asp-fallback-test-class="btn"
    asp-fallback-test-property="diplay"
    asp-fallback-test-value="inline-block"/>
    <link href="/css/site.css" rel="stylesheet" />
    <link href="SOW.ShopOfWonders.styles.css" rel="stylesheet" />
    <link rel="icon" type="image/png" href="/favicon.png"/>
    <component type="typeof(HeadOutlet)" render-mode="Server" />
</head>
<body>
    <component type="typeof(App)" render-mode="Server" />
     
    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.2.3/js/bootstrap.bundle.min.js"
    asp-fallback-src="/lib/bootstrap523/js/bootstrap.bundle.min.js"
    asp-fallback-test="window.bootstrap"></script>
</body>
</html>
